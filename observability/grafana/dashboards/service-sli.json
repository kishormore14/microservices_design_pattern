{
  "title": "HRMS Service SLI",
  "timezone": "browser",
  "panels": [
    {
      "title": "Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{service=~\"$service\"}[5m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "title": "Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\",service=~\"$service\"}[5m])) / sum(rate(http_server_requests_seconds_count{service=~\"$service\"}[5m]))",
          "legendFormat": "5xx ratio"
        }
      ]
    },
    {
      "title": "Latency P95",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{service=~\"$service\"}[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_server_requests_seconds_count, service)",
        "refresh": 1
      }
    ]
  },
  "schemaVersion": 39,
  "version": 1
}
