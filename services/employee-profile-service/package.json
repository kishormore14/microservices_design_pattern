{
  "name": "@hrms/employee-profile-service",
  "version": "1.0.0",
  "private": true,
  "description": "Employee Profile microservice exposing REST and gRPC APIs",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings=0",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "db:migrate": "flyway -configFiles=../../infra/flyway/conf/flyway.conf migrate",
    "db:validate": "flyway -configFiles=../../infra/flyway/conf/flyway.conf validate"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.0",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/microservices": "^10.4.1",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/sequelize": "^10.0.1",
    "@nestjs/swagger": "^7.4.2",
    "@opentelemetry/api": "^1.9.0",
    "amqplib": "^0.10.4",
    "bullmq": "^5.16.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "kafkajs": "^2.2.4",
    "nestjs-pino": "^4.1.0",
    "ioredis": "^5.4.1",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "swagger-ui-express": "^5.0.1",
    "unleash-client": "^5.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@types/express": "^4.17.21",
    "@types/amqplib": "^0.10.6",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20"
  }
}
